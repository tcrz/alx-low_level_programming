CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS =  -Wall -Werror -Wextra -pedantic

.PHONY: clean oclean fclean re

all: ${OBJ}
	${CC} ${OBJ} ${CFLAGS} -o ${NAME}

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}

fclean:
	${RM} *.o ${NAME}
	${RM} *.o ${OBJ}

re: oclean all
